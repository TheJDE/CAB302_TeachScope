<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>


<StackPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
           fx:controller="com.cab302.teachscope.controllers.NewPasswordController"
           stylesheets="@../css/styles.css">
<HBox alignment="CENTER" spacing="0" HBox.hgrow="ALWAYS">

    <!-- login form -->
    <VBox alignment="CENTER" spacing="15.0" prefWidth="400" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
        <padding>
            <Insets top="70" right="70" bottom="70" left="320"/>
        </padding>

        <!-- logo -->
        <ImageView pickOnBounds="true" preserveRatio="true" fitWidth="250">
            <image>
                <Image url="@../images/logo_teachscope.png"/>
            </image>
        </ImageView>

        <!-- welcome text -->
        <Label text="Please Enter New Password" style="-fx-font-size: 25px; -fx-font-weight: bold;"/>

        <!-- initial password entry -->
        <PasswordField fx:id="newPasswordField" promptText="New Password" styleClass="form-control"/>

        <!-- confirmation password entry -->
        <PasswordField fx:id="confirmPasswordField" promptText="Please Confirm New Password" styleClass="form-control"/>

        <!-- reset password button -->
        <Button fx:id="resetPasswordButton" text="Reset Password" styleClass="" maxWidth="Infinity" onAction="#onResetPasswordClick"/>

        <!-- errorLabel -->
        <Label fx:id="errorLabel" text="" style="-fx-font-size: 10px; -fx-font-weight: bold;"/>

    </VBox>

    <!-- image -->
    <ImageView pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
        <image>
            <Image url="@../images/login_picture.png"/>
        </image>
    </ImageView>

</HBox>
</StackPane>